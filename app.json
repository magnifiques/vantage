{
  "expo": {
    "name": "vantage",
    "slug": "vantage",
    "version": "1.0.0",
    "description": "The best platform to be involved with cryptocurrencies!",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vapit.vantage",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow Vantage to use Face ID for secure authentication."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.vapit.vantage",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ],
      [
        "expo-router",
        {
          "origin": "http://localhost:8081"
        }
      ],
      "expo-asset",
      "expo-secure-store",
      "expo-font",
      "expo-build-properties"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "https://u.expo.dev/8fb7f659-304f-4b48-ba94-77a0a1f20692"
      },
      "eas": {
        "projectId": "8fb7f659-304f-4b48-ba94-77a0a1f20692"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/8fb7f659-304f-4b48-ba94-77a0a1f20692"
    }
  }
}
